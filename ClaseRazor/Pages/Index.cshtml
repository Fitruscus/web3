@page
@{
    ViewData["Title"] = "MiPanel - Lista de Tareas";
}

<div class="todo-wrapper">
    <h1>Mi Lista de Tareas</h1>

    <!-- Formulario para nueva tarea -->
    <div class="mb-3">
        <input type="text" id="newTitle" placeholder="Título" class="form-control mb-1" />
        <input type="text" id="newDesc" placeholder="Descripción" class="form-control mb-1" />
        <input type="date" id="newDate" class="form-control mb-1" />
        <button id="addTaskBtn" class="btn btn-primary mt-1">Agregar Tarea</button>
    </div>

    <!-- Filtros -->
    <div class="filters mb-3">
        <button class="btn btn-secondary filter-btn" data-filter="all">Todas</button>
        <button class="btn btn-success filter-btn" data-filter="completed">Completadas</button>
        <button class="btn btn-warning filter-btn" data-filter="pending">Pendientes</button>
    </div>

    <!-- Lista de Tareas -->
    <ul class="task-list list-group">
        <!-- Tareas preasignadas -->
        <li class="list-group-item task-item" data-status="pending">
            <div>
                <strong>Comprar víveres</strong>
                <p>Leche, pan y huevos</p>
                <small>Vence: 2025-08-20</small>
            </div>
            <div class="task-actions">
                <button class="btn btn-sm btn-success complete-btn">✓</button>
                <button class="btn btn-sm btn-primary edit-btn">✎</button>
                <button class="btn btn-sm btn-danger delete-btn">🗑</button>
            </div>
        </li>
        <li class="list-group-item task-item" data-status="completed">
            <div>
                <strong>Estudiar JavaScript</strong>
                <p>Revisar funciones y eventos</p>
                <small>Vence: 2025-08-18</small>
            </div>
            <div class="task-actions">
                <button class="btn btn-sm btn-success complete-btn">✓</button>
                <button class="btn btn-sm btn-primary edit-btn">✎</button>
                <button class="btn btn-sm btn-danger delete-btn">🗑</button>
            </div>
        </li>
        <li class="list-group-item task-item" data-status="pending">
            <div>
                <strong>Llamar al banco</strong>
                <p>Consultar saldo y movimientos</p>
                <small>Vence: 2025-08-22</small>
            </div>
            <div class="task-actions">
                <button class="btn btn-sm btn-success complete-btn">✓</button>
                <button class="btn btn-sm btn-primary edit-btn">✎</button>
                <button class="btn btn-sm btn-danger delete-btn">🗑</button>
            </div>
        </li>
    </ul>
</div>
